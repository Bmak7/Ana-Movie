<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/black"
             android:fitsSystemWindows="true"
             tools:context="com.faselhd.app.VideoPlayerActivity">

    <!-- ExoPlayer View (using AndroidX Media3) - MUST BE FIRST -->
    <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            app:use_controller="false"
            app:resize_mode="fill" />

    <!-- Top Overlay (Title, Resolution, Back Button) -->
    <LinearLayout
            android:id="@+id/top_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/gradient_overlay_top"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">

        <!-- Top Controls Row -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <!-- Back Button -->
            <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@android:color/white"/>

            <!-- Spacer -->
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            <!-- Video Info Button -->
            <ImageButton
                    android:id="@+id/btn_video_info"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Video Info"
                    android:src="@drawable/info_24px"
                    app:tint="@android:color/white"/>

            <!-- Resolution Display -->
            <TextView
                    android:id="@+id/tv_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/resolution_badge_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="1080p - 1920×1080"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

        </LinearLayout>

        <!-- Episode Title -->
        <TextView
                android:id="@+id/tv_episode_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="مسلسل Ozark - Episode 35 - موسم 4 : الحلقة 7"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

    </LinearLayout>

    <!-- Center Controls (Play/Pause, Rewind, Fast Forward) -->
    <LinearLayout
            android:id="@+id/center_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

        <!-- Rewind 10s -->
        <FrameLayout
                android:id="@+id/btn_rewind"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/replay_10_24px"
                    app:tint="@android:color/white"/>

        </FrameLayout>

        <!-- Play/Pause Button -->
        <FrameLayout
                android:id="@+id/btn_play_pause"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:id="@+id/iv_play_pause"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_arrow_large"
                    app:tint="@android:color/white"/>

        </FrameLayout>

        <!-- Fast Forward 10s -->
        <FrameLayout
                android:id="@+id/btn_fast_forward"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/forward_10_24px"
                    app:tint="@android:color/white"/>

        </FrameLayout>

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
            android:id="@+id/bottom_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay_bottom"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">

        <!-- Progress Bar -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <!-- Current Time -->
            <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:text="00:00"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            <!-- Progress Bar -->
            <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/custom_seekbar_progress"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/custom_seekbar_thumb" />

            <!-- Total Time -->
            <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:minWidth="48dp"
                    android:text="55:42"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

        </LinearLayout>

        <!-- Bottom Action Buttons Row 1 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <!-- Lock Button -->
            <ImageButton
                    android:id="@+id/btn_lock"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/control_button_background"
                    android:contentDescription="@string/lock_controls"
                    android:src="@drawable/ic_lock_open"
                    app:tint="@android:color/white"/>

            <!-- A-B Repeat Button -->
            <ImageButton
                    android:id="@+id/btn_ab_repeat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="A-B Repeat"
                    android:src="@drawable/repeat_24px"
                    app:tint="@android:color/white"/>

            <!-- Spacer -->
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            <!-- Playback Speed Button -->
            <TextView
                    android:id="@+id/btn_playback_speed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="1x"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <!-- Audio Track Button -->
            <ImageButton
                    android:id="@+id/btn_audio_track"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Audio Track"
                    android:src="@drawable/music_note_24px"
                    app:tint="@android:color/white"/>

            <!-- Quality/Settings Button -->
            <ImageButton
                    android:id="@+id/btn_quality"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/quality"
                    android:src="@drawable/settings_24px"
                    app:tint="@android:color/white"/>

            <!-- Resize Button -->
            <ImageButton
                    android:id="@+id/btn_resize"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/resize_mode"
                    android:src="@drawable/ic_resize"
                    app:tint="@android:color/white"/>

        </LinearLayout>

        <!-- Bottom Action Buttons Row 2 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <!-- Picture-in-Picture Button -->
            <ImageButton
                    android:id="@+id/btn_pip"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Picture in Picture"
                    android:src="@drawable/picture_in_picture_24px"
                    app:tint="@android:color/white"/>

            <!-- Background Play Button -->
            <ImageButton
                    android:id="@+id/btn_background_play"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Background Play"
                    android:src="@drawable/ic_play_circle"
                    app:tint="@android:color/white"/>

            <!-- Spacer -->
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            <!-- Fullscreen Button -->
            <ImageButton
                    android:id="@+id/btn_fullscreen"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/fullscreen"
                    android:src="@drawable/mobile_rotate_24px"
                    app:tint="@android:color/white"/>

            <!-- Subtitle Button -->
            <ImageButton
                    android:id="@+id/btn_subtitle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/subtitles"
                    android:src="@drawable/ic_subtitles"
                    app:tint="@android:color/white"/>

            <!-- Next Episode Button -->
            <ImageButton
                    android:id="@+id/btn_next_episode"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/next_episode"
                    android:src="@drawable/ic_skip_next"
                    app:tint="@android:color/white"/>

        </LinearLayout>

        <!-- Playback Speed Indicator -->
        <TextView
                android:id="@+id/speed_indicator_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/seek_time_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Speed: 2.0x"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

    </LinearLayout>

    <!-- Seek Time Display (Center) -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/seek_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#80000000"
            app:cardCornerRadius="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:elevation="10dp">

        <TextView
                android:id="@+id/tv_seek_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="+00:15 [01:32:13]" />

    </com.google.android.material.card.MaterialCardView>

    <!-- A-B Repeat Indicators -->
    <LinearLayout
            android:id="@+id/ab_repeat_indicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:visibility="gone">

        <TextView
                android:id="@+id/tv_point_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seek_time_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="A: 01:30"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_point_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/seek_time_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="B: 02:15"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

    </LinearLayout>

    <!-- Volume Control Overlay (Left Side) -->
    <LinearLayout
            android:id="@+id/volume_overlay"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="32dp"
            android:background="@drawable/control_overlay_background"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        <ImageView
                android:id="@+id/iv_volume_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_volume_up"
                app:tint="@android:color/white"/>

        <ProgressBar
                android:id="@+id/volume_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:max="100"
                android:progress="75"
                android:progressDrawable="@drawable/vertical_progress_bar"
                android:rotation="270" />

        <TextView
                android:id="@+id/tv_volume_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="75%"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

    </LinearLayout>

    <!-- Brightness Control Overlay (Right Side) -->
    <LinearLayout
            android:id="@+id/brightness_overlay"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="32dp"
            android:background="@drawable/control_overlay_background"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_brightness"
                app:tint="@android:color/white"/>

        <ProgressBar
                android:id="@+id/brightness_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/vertical_progress_bar"
                android:rotation="270" />

        <TextView
                android:id="@+id/tv_brightness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="50%"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@android:color/white"
            android:visibility="gone" />

    <!-- Skip Intro Button -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_skip_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:text="Skip Intro"
            app:icon="@drawable/ic_skip_next"
            android:visibility="gone" />

    <!-- Lock Overlay -->
    <FrameLayout
            android:id="@+id/lock_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:visibility="gone">

        <ImageButton
                android:id="@+id/btn_unlock"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/control_button_background"
                android:src="@drawable/ic_lock"
                app:tint="@android:color/white" />

        <TextView
                android:id="@+id/lock_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:background="@drawable/seek_time_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Screen is locked. Tap to unlock."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

    </FrameLayout>

    <!-- Video Info Overlay -->
    <ScrollView
            android:id="@+id/video_info_overlay"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@drawable/control_overlay_background"
            android:padding="16dp"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video Information"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

            <TextView
                    android:id="@+id/tv_video_info_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resolution: 1920x1080\nCodec: H.264\nBitrate: 5000 kbps\nFrame Rate: 30 fps\nAudio: AAC 128 kbps"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            <Button
                    android:id="@+id/btn_close_video_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:background="@drawable/control_button_background" />

        </LinearLayout>

    </ScrollView>

    <!-- GESTURE FEEDBACK OVERLAYS - POSITIONED AFTER ALL OTHER OVERLAYS -->

    <!-- Rewind Visual Feedback -->
    <LinearLayout
            android:id="@+id/rewind_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="64dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/replay_10_24px"
                app:tint="@android:color/white" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-10 seconds"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

    </LinearLayout>

    <!-- Forward Visual Feedback -->
    <LinearLayout
            android:id="@+id/forward_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="64dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/forward_10_24px"
                app:tint="@android:color/white" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 seconds"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>

